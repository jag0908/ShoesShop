<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.himedia.shop.dao.ICustomerDao">

    <select id="getAllCount" resultType="_int">
        select count(*) from qna;
    </select>

    <select id="selectQna" resultType="com.himedia.shop.dto.QnaVO" parameterType="com.himedia.shop.dto.Paging">
        select * from qna order by qseq desc limit #{displayRow} offset #{startNum}
    </select>

    <select id="getQna" resultType="com.himedia.shop.dto.QnaVO">
        select * from qna where qseq=#{qseq}
    </select>

</mapper>
