<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.himedia.shop.dao.IProductDao">

    <select id="selectNew" resultType="com.himedia.shop.dto.ProductVO">
        select * from best_pro_view
    </select>

    <select id="selectBest" resultType="com.himedia.shop.dto.ProductVO">
        select * from new_pro_view
    </select>

    <select id="selectCategory" parameterType="com.himedia.shop.dto.ProductVO">
        select * from product where category=#{category}
    </select>

    <select id="getProduct" resultType="com.himedia.shop.dto.ProductVO">
        select * from product where pseq=#{pseq}
    </select>

</mapper>